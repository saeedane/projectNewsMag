    "order": ["top", "mid", "bottom"],
    "top": {
      "left": {
        "items": ["top_menu"]
      },
      "right": {
        "items": ["date", "divider5", "social_icons"]
      }
    },
    "mid": {
      "left": {
        "layout": "normal",
        "items": ["logo"]
      },
      "right": {
        "items": ["ad1"]
      }
    },
    "bottom": {
      "scheme": "dark",
      "layout": "boxed",
      "left": {
        "layout": "normal",
        "items": ["menu_handler"]
      },
      "center": {
        "layout": "grow",
        "align": "left",
        "items": ["main_menu"]
      },
      "right": {
        "layout": "normal",
        "items": ["dark_mode", "search", "shop", "user"]
      }
    }
  },
  "builder_header_mobile": {
    "mobile": {
      "left": {
        "items": ["menu_handler"]
      },
      "center": {
        "items": ["logo"]
      },
